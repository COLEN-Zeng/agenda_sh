{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es2015",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": false
    },
    "include": [
        "./src/**/*",
        // ".vscode/type_hinting/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        ".vscode/type_hinting/**/*",
    ],
    "typeRoots": [ /* 要包含的类型声明文件路径列表*/
        "./src/**/*",
        // ".vscode/type_hinting/**/*",
        "./node_modules/@types"
    ]
}
