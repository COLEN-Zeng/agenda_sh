{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "target": "ES2018",
        "sourceMap": true,
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "./src/lib/**/*"
    ]
}
