{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "target": "es2015",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": false
    },
    "include": [
        "./src/**/*",
        ".vscode/type_hinting/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
